const sortedArray = [1, 3, 5, 7, 9, 11, 13];
const unsortedArray = [1, 4, 2, 8, 5, 7, 9, 11, 13];
const targetValue = 7;

// Step 1: Sort the unsorted array
const sortedArr = unsortedArray.slice().sort((a, b) => a - b);

// Step 2: Binary search function (from before)
function binarySearch(arr, target) {
  let left = 0;
  let right = arr.length - 1;

  while (left <= right) {
    const mid = Math.floor((left + right) / 2);

    if (arr[mid] === target) return mid;
    else if (arr[mid] < target) left = mid + 1;
    else right = mid - 1;
  }

  return -1; // Not found
}

// Step 3: Use binary search on the sorted array
const resultIndex = binarySearch(sortedArr, targetValue);

console.log("Sorted array:", sortedArr);
if (resultIndex !== -1) {
  console.log(`Target ${targetValue} found at index ${resultIndex} in sorted array.`);
} else {
  console.log(`Target ${targetValue} not found.`);
}
